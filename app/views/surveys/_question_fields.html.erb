<fieldset>
	<div class="form-group">
		<%= f.label :short_content, "Short Question" %>
		<%= f.text_field :short_content, class: "form-control" %>
		<span class="help-block">This will be displayed as the header for the survey results table.</span>
	</div>
	<div class="form-group">
	<%= f.label :content, "Question" %>
	<%= f.text_area :content, class: "form-control" %>
	</div>
	<div class="form-group">
	<%= f.check_box :rated %>
	<%= f.label :rated, "Rated" %>
	<span class="help-block">Check if the answer to the question is a rating 1-10.</span>
	</div>
	<div class="form-group">
	<%= f.check_box :_destroy %>
	<%= f.label :_destroy, "Remove Question", class: "remove-fields" %>
	</div>
</fieldset>