<div class="pull-left"><h2>Surveys</h2></div>
<div class="pull-right">
  <%= link_to ' New Survey', new_survey_path, class: "add_fields btn btn-default glyphicon glyphicon-plus-sign" %>
</div>
<div class="clear"></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% if !@warlock.nil? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
    <tr>
      <td><%= link_to survey.name, survey %></td>
      <% if !@warlock.nil? %>
      <td>
        <%= link_to ' Edit', edit_survey_path(survey), class: "btn btn-default btn-sm glyphicon glyphicon-edit i-warlock" %>
        <%= link_to ' Remove', survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "remove-fields btn btn-default btn-sm glyphicon glyphicon-remove-sign i-warlock" %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
