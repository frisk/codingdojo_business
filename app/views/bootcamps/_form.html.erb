<%= simple_form_for(@bootcamp) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title %>
    <%= f.input :date %>
    <%= f.input :group_email %>
    <%= f.association :location, :include_blank => false, label_method: :city %>
    <div class="form-group staff optional instructor">
    	<label class="string opitonal" for="staff_id">Instructor</label>
	    <%= render 'instructors' %>
    </div>
	<% (1..3).each do |i|%>
		<% @i = i %>
		<div class="form-group staff optional ta">
	    	<label class="string opitonal" for="staff_id">Remote TA <%= i.to_s %></label>
		    <%= render 'ta' %>
		</div>
	<% end %>
    <%= f.button :submit, class: "btn btn-default" %>
<% end %>
