<h1>Listing bootcamps</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bootcamps.each do |bootcamp| %>
    <tr>
      <td><%= bootcamp.title %></td>
      <td><%= bootcamp.date %></td>
      <td><%= link_to 'Show', bootcamp %></td>
      <td><%= link_to 'Edit', edit_bootcamp_path(bootcamp) %></td>
      <td><%= link_to 'Destroy', bootcamp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

